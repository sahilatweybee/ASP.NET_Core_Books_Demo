@model BookModel

<div class="col-md-4">
    <div class="card mb-4 shadow-sm">
        <img src="@Model.CoverImgUrl" class="img-thumbnail" />
        <div class="card-body">
            <h3 class="card-title">@(string.IsNullOrEmpty(Model.Name) ? "No Book Found" : Model.Name)</h3>
            <p class="card-text">@(string.IsNullOrEmpty(Model.Description) ? "No Book Found" : Model.Description) @Model.Description</p>
            <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                    <a asp-route="BookDetailsRoute" asp-route-id="@Model.Id" class="btn btn-sm btn-outline-secondary">View Details</a>
                </div>
                <small class="text-muted">@(string.IsNullOrEmpty(Model.Author) ? "No Book Found" : Model.Author)</small>
            </div>
        </div>
    </div>
</div>